{% extends 'AdminBundle::layout.html.twig' %}
{% block header %}
    Cửa Hàng
{% endblock header %}
{% block body %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chỉnh Sửa Cửa Hàng</h1>
        </div>
        <br/>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
                        <form class='form-horizontal' role="form" id="form" action="{{ path('admin_cuahang_create') }}" enctype="multipart/form-data" method="post">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    {{ form_label(form.name) }}
                                </div>
                                <div class="col-sm-10">
                                    {{form_widget(form.name)}}
                                </div>
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="form-group">
                                <div class="col-sm-2">
                                    {{ form_label(form.address) }}
                                </div>
                                <div class="col-sm-10">
                                    {{form_widget(form.address)}}
                                </div>
                                {{ form_errors(form.address) }}
                            </div>
                            <div class="form-group">
                                <div class="col-sm-2">
                                    {{ form_label(form.note) }}
                                </div>
                                <div class="col-sm-10">
                                    {{form_widget(form.note)}}
                                </div>
                                {{ form_errors(form.note) }}
                            </div>
                            <div class="form-group">
                                <div class="col-sm-2">
                                    {{ form_label(form.image) }}
                                </div>
                                <div class="col-sm-10">
                                    {{form_widget(form.image)}}
                                </div>
                                {{ form_errors(form.image) }}
                            </div>
                            {{form_widget(form.save)}}
                        {{ form_end(form) }}
        </div>
        <!-- /.col-lg-12 -->
    </div>
    
    
</div>
{% endblock body %}