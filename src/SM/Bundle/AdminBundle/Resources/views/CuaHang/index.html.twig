{% extends 'AdminBundle::layout.html.twig' %}
{% block header %}
    Cửa Hàng
{% endblock header %}
{% block body %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Cửa Hàng</h1>
                </div>
                <div class=".col-lg-1">
                    <a href="{{ path('admin_cuahang_create') }}" class="btn btn-success">Thêm Cửa Hàng</a>
                </div>
                <br/>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                {% for cuaHang in listCuaHang %}
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-10 col-sm-10 col-lg-10">
                                    <a href="{{ path('admin_cuahang_detail', { 'id': cuaHang.idCuaHang }) }}">{{ cuaHang.name }}</a>
                                </div>
                                <div class="col-xs-1 col-sm-1 col-lg-1">
                                    <a href="{{ path('admin_cuahang_edit', { 'id': cuaHang.idCuaHang }) }}">
                                        <span class="text-right fa fa-edit"></span>
                                    </a>
                                </div>
                                <div class="col-xs-1 col-sm-1 col-lg-1">
                                    <a href="{{ path('admin_cuahang_delete', { 'id': cuaHang.idCuaHang }) }}" onclick="return confirm('Bạn có chắc muốn xoá không?')">
                                        <span>X</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="text-center">
                                <a href="{{ path('admin_cuahang_detail', { 'id': cuaHang.idCuaHang }) }}"><div style="background-image:url('{{ asset(cuaHang.image) }}')" class="img-thumbnail custom_img1"></div></a>
                            </div><br/>
                            <p class="text-left">Địa chỉ: {{ cuaHang.address }}</p>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <div class="navigation">
                        {{ knp_pagination_render(listCuaHang) }}
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
{% endblock body %}
