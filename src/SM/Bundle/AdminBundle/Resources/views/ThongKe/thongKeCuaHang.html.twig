{% extends 'AdminBundle::layout.html.twig' %}
{% block body %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Thống Kê Cửa Hàng</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-inline">
                                <div class="form-group" style="padding-right: 5%;">
                                    <label for="exampleInputName2">Cửa Hàng : </label>
                                    <select class="form-control" id="idCuaHang">
                                        {% for cuaHang in listCuaHang %}
                                            <option value="{{ cuaHang.idCuahang }}">{{ cuaHang.name }}</option>
                                        {% endfor %}
                                        
                                    </select>
                                </div>
                                <div class="form-group" style="padding-right: 5%;">
                                    <label for="exampleInputEmail2">Tháng : </label>
                                    <div class="input-append date" id="dp3" data-date="{{ setThang }}" data-date-format="dd-mm-yyyy">
                                        <input type="text" class="form-control" readonly value="{{ setThang }}"/>
                                        <span class="add-on"><i class="icon-th"></i></span>
                                    </div>
                                    <script type="text/javascript">
                                        $(function () {
                                            $('#dp3').datepicker();
                                        });
                                    </script>
                                </div>
                                <input id='get_data_for_day' type="button" class="btn btn-primary" value="Get Data"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Các Order Của Cửa Hàng
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ngày</th>
                                            <th colspan="3">Danh Sách Order</th>
                                            <th>Tổng Cộng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for orderCuahang in listOrderCuaHang %}
                                        <tr>
                                            <td rowspan="{{ orderCuahang.product|length }}">{{ orderCuahang.stt }}</td>
                                            <td rowspan="{{ orderCuahang.product|length }}">{{ orderCuahang.date }}</td>
                                            {% for key, oneProduct in orderCuahang.product %}
                                                {% if key != 0 %}
                                                    <tr>
                                                {% endif %}
                                                <td>{{ oneProduct.name }}</td>
                                                <td>{{ oneProduct.soLuong }}</td>
                                                <td>{{ oneProduct.price }}</td>
                                                {% if key == 0 %}
                                                    <td rowspan="{{ orderCuahang.product|length }}">{{ orderCuahang.Total }}</td>
                                                {% endif %}
                                                </tr>
                                            {% endfor %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock body %}
{%block script_footer%}
    <script>
        
    </script>
{% endblock script_footer %} 
