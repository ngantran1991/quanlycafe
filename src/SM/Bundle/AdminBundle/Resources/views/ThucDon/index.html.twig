{% extends 'AdminBundle::layout.html.twig' %}
{% block header %}
    
{% endblock header %}
{% block body -%}
    <div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> <i class="glyphicon glyphicon-menu-hamburger"></i> Thực Đơn </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="dataTables_length" id="dataTables-example_length">
                                <form id="form" action="" method="POST">
                                    <label style="width: 100%;">
{#                                        {{form_widget(form.txtConditionContent)}}#}
                                        <button style="float: left;" type="submit" class="btn btn-outline btn-success btn-sm">Search</button>
                                    </label>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="dataTable_wrapper">


                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên</th>
                                        <th>Chi Tiếc</th>
                                        <th>Hình Ảnh</th>
                                        <th>Giá</th>
                                        <th>Ghi Chú</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set num = numberRecord * (page - 1) %}
                                    {% for entity in entities %}
                                        <tr {% if num != 1 %}
                                            style="color: #A7A7A7;"
                                            {% endif %}
                                                >
                                                {% set num = num + 1 %}
                                                <td>{{ num }}</td>
                                                <td>{{ entity.name }}</td>
                                                <td>{{ entity.detail }}</td>
                                                <td>
                                                    <img src="{{ asset(entity.image) }}" class="img-thumbnail"/>
                                                </td>
                                                <td>{{ entity.gia }}</td>
                                                <td>{{ entity.note }}</td>
                                                <td>
                                                    <a href="#" class="btn btn-primarybtn btn-info">Edit</a>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation">
                                            {{ knp_pagination_render(entities) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <a href="#" class="btn btn-primary">
                                    Tạo mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                {% endblock %}

