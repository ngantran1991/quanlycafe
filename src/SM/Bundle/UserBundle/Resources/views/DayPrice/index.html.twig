{% extends 'UserBundle::layout.html.twig' %}
{% block body %}
<div id="page-wrapper">
    <form role="form" id="form" action="{{ path('price_a_day') }}" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Price a Day</h3>
                    <div class="row">
                        <div class="col-xs-6 col-sm-4">
                            <div class="form-group">
                                <div class="input-append date" id="dp3" data-date="{{ dateNow }}" data-date-format="dd-mm-yyyy">
                                    {{form_widget(form.dateActive)}}
                                    {{ form_errors(form.dateActive) }}
                                      <span class="add-on"><i class="icon-th"></i></span>
                                </div>
                            </div>
                            <script type="text/javascript">
                                $(function () {
                                    $('#dp3').datepicker();
                                });
                            </script>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            {{form_widget(form.idTypeExchange)}}
                            {{ form_errors(form.idTypeExchange) }}
                        </div>
                        <div class="clearfix visible-xs-block"></div>
                        <div class="col-xs-6 col-sm-4">
                            <input {% if isClick == false %} disabled {% endif %}id='get_data_for_day' type="button" class="btn btn-primary" value="Get Data"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Price Detail</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Price In
                                    </th>
                                    <th>
                                        Price Out
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Price (VND)</th>
                                    <td>
                                        {{form_widget(form.valueIn)}}
                                        {{ form_errors(form.valueIn) }}
                                    </td>
                                    <td>
                                        {{form_widget(form.valueOut)}}
                                        {{ form_errors(form.valueOut) }}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    {{form_widget(form.save)}}
                </div>
            </div>
        </div>
{#        <!-- /.col-lg-12 -->#}
    </div>
    {{ form_end(form) }}
</div>
{% endblock body %}
